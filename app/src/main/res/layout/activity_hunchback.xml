<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Hunchback">

        <ImageView
            android:id="@+id/hunchbackimage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/hunch"
            />
        <TextView
            android:id="@+id/hunchbackStory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/hunchStory"
            android:textColor="@color/colorPrimaryText"
            android:textSize="24sp"
            android:layout_alignParentLeft="true"
            app:layout_constraintTop_toBottomOf="@+id/hunchbackimage"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="10dp"

            />
        <TextView
            android:id="@+id/conthunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/continue_reading"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hunchbackStory"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            />

        <ImageButton
            android:id="@+id/hunchorse"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/horse"
            android:layout_marginLeft="16dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/conthunch"/>

        <ImageButton
            android:id="@+id/hunchmerchant"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/merchant"
            android:layout_marginLeft="30dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintLeft_toRightOf="@id/hunchorse"
            app:layout_constraintTop_toBottomOf="@id/conthunch"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>

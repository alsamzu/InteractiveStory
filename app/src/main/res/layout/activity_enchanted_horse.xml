<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnchantedHorse">

    <TextView
        android:id="@+id/horseMainTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Enchanted Horse"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="23sp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"/>

    <ImageView
        android:id="@+id/horseimage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@+id/horseMainTittle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/horse"
        />
    <TextView
        android:id="@+id/horseStory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/horseStroy"
        android:textColor="@color/colorPrimaryText"
        android:textSize="24sp"
        android:layout_alignParentLeft="true"
        app:layout_constraintTop_toBottomOf="@+id/horseimage"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginRight="10dp"
        android:layout_margin="10dp"

        />
    <TextView
        android:id="@+id/conthorse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/continue_reading"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horseStory"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        />

    <ImageButton
        android:id="@+id/horsemerchant"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/merchant"
        android:layout_marginLeft="16dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/conthorse"/>

    <ImageButton
        android:id="@+id/horsealadin"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/aladdin"
        android:layout_marginLeft="30dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toRightOf="@id/horsemerchant"
        app:layout_constraintTop_toBottomOf="@id/conthorse"/>

</android.support.constraint.ConstraintLayout>
</ScrollView>
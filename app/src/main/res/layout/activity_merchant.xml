<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Merchant">
    <ImageView
        android:id="@+id/merchantimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/merchant"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>
    <TextView
        android:id="@+id/merchantStory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/merchantStory"
        android:textColor="@color/colorPrimaryText"
        android:textSize="24sp"
        android:layout_alignParentLeft="true"
        app:layout_constraintTop_toBottomOf="@+id/merchantimage"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"

        />
<Button
    android:id="@+id/merchantMain"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryLight"
    android:text="Back To Main Page"
    android:textColor="@color/colorPrimaryText"
    app:layout_constraintTop_toBottomOf="@id/merchantStory"/>
    <Button
        android:id="@+id/merchantNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="168dp"
        android:background="@color/colorPrimaryLight"
        android:text="Next Story"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintLeft_toRightOf="@+id/merchantMain"
        app:layout_constraintTop_toBottomOf="@+id/merchantStory"/>


</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/frontArabian"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/arabian"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"

            />

        <ImageButton
            android:id="@+id/merchantGenie"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@id/frontArabian"
            android:src="@drawable/merchant"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <ImageButton
            android:id="@+id/aladdin"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="36dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/aladdin"
            app:layout_constraintLeft_toRightOf="@+id/merchantGenie"
            app:layout_constraintTop_toBottomOf="@id/frontArabian" />

        <ImageButton
            android:id="@+id/twodogs"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="36dp"
            android:layout_marginRight="20dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/twodogs"
            app:layout_constraintLeft_toRightOf="@+id/aladdin"
            app:layout_constraintTop_toBottomOf="@id/frontArabian" />


        <ImageButton
            android:id="@+id/youngking"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="20dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/youngking"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/merchantGenie" />
        <ImageButton
            android:id="@+id/hunchback"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="20dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/hunchback"
            app:layout_constraintLeft_toRightOf="@id/youngking"
            app:layout_constraintTop_toBottomOf="@id/aladdin" />
        <ImageButton
            android:id="@+id/horse"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="20dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/horse"
            app:layout_constraintLeft_toRightOf="@id/hunchback"
            app:layout_constraintTop_toBottomOf="@id/twodogs" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>
